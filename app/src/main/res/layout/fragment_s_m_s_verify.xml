<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.account.AccountVerifyFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow_left">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/black_text"
            app:backgroundTint="#0000"
            android:text="Help"/>

    </com.google.android.material.appbar.MaterialToolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/textHeader"
            android:text="welcome! enter code from sms" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:textColor="@color/gray_placeholder"
            android:text="We'll sent it to" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/item_user"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="4dp"/>

            <EditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="4dp"/>

            <EditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="4dp"/>

            <EditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="4dp"/>

            <EditText
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="4dp"/>

        </LinearLayout>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_placeholder"
        android:text="New code 0:20" />

</FrameLayout>