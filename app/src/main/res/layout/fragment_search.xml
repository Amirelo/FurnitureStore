<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/item_text_not_loaded"
        app:titleCentered="true"
        app:navigationIcon="@drawable/chevron_left"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:clipToOutline="true"
                android:backgroundTint="@color/gray_tab"
                android:background="@drawable/border_rounded_8"
                android:textColorHint="@color/gray_placeholder"
                android:iconifiedByDefault="false"
                android:inputType="text"/>

            <LinearLayout
                android:id="@+id/llOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="164dp"
                    android:layout_height="36dp"
                    android:textSize="14sp"
                    android:text="Sort"
                    android:background="@drawable/border_rounded_4"
                    android:textColor="@color/black_text"
                    app:backgroundTint="@color/gray_tab"
                    app:icon="@drawable/direction_vertical"
                    app:iconTint="@color/black_text"
                    app:iconGravity="textEnd"/>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="164dp"
                    android:layout_height="36dp"
                    android:textSize="14sp"
                    android:text="Filter"
                    android:background="@drawable/border_rounded_8"
                    android:textColor="@color/black_text"
                    app:backgroundTint="@color/gray_tab"
                    app:icon="@drawable/filter"
                    app:iconTint="@color/black_text"
                    app:iconGravity="textEnd"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvTitleCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="Categories"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</FrameLayout>