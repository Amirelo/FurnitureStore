<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ConnectionLostFragment"
    android:paddingHorizontal="16dp"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/ivEmptyPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sad"/>

        <TextView
            android:id="@+id/tvEmptyPlaceholder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="no connection"/>

        <TextView
            android:id="@+id/tvEmptyPlaceholder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/gray_placeholder"
            android:text="so, it’s looks like you don’t have an intternet connection right now"/>

</LinearLayout>