<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="94dp"
        android:layout_height="115dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_rounded_8"
        android:backgroundTint="@color/gray_tab"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:clipToOutline="true"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/ivProduct"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="$304"/>

    <ImageView
        android:id="@+id/ivClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_clear"
        android:clipToOutline="true"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/ivProduct"
        android:layout_below="@+id/tvPrice"
        android:textSize="12sp"
        android:textColor="@color/gray_placeholder"
        android:text="Wooden bedside table featuring aÂ raised design"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/tvDescription"
        android:layout_toEndOf="@+id/ivProduct"
        android:background="@drawable/border_rounded_8"
        android:backgroundTint="@color/gray_tab"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivDecrease"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_minus"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/border_none"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="1"/>

        <ImageView
            android:id="@+id/ivIncrease"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_plus"/>

    </LinearLayout>




</RelativeLayout>