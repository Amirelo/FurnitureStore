<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="164dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@color/gray_tab"
        android:layout_centerHorizontal="true"
        android:clipToOutline="true"
        android:background="@drawable/rounded_border"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProduct"
        android:layout_marginBottom="4dp"
        android:layout_alignStart="@+id/ivProduct"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/item_text_not_loaded"/>
    
    <ImageButton
        android:id="@+id/ivFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/ivProduct"
        android:layout_alignEnd="@+id/ivProduct"
        android:background="@drawable/heart"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:layout_alignStart="@+id/ivProduct"
        android:textSize="14sp"
        android:textColor="@color/gray_placeholder"
        android:maxLines="2"
        android:text="@string/item_text_not_loaded"/>

</RelativeLayout>